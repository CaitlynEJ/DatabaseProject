<html>
    <!-- navbar -->
    <nav class="navbar navbar-expand-sm fixed-top navbar-light bg-light">
        <a class="navbar-brand" href="#">Superhero School</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="/index.html">Home</a>
            <a class="nav-link" href="/employees">Employees</a>
            <a class="nav-link" href="/students">Students</a>
            <a class="nav-link" href="/superpowers">Superpowers</a>
            <a class="nav-link" href="/missions">Missions</a>
            <a class="nav-link" href="/teams">Teams</a>
          </div>
        </div>
    </nav>
    <div class="container mt-5">
        <!-- employee name -->
        <h3 class="display-3">{{employee.firstName}} {{employee.lastName}}</h3>
        <div class="row justify-content-between mt-4">
            <!-- employee info update -->
            <div class="col-md-5">
                <form id="update-employee-form">
                    <h6>* indicates required field</h6>
                    <!-- first & last name -->
                    <div class="form-group row">
                        <label for="fname" class="col-sm-3 col-form-label">First name *</label>
                        <div class="col-sm-9">
                            <input type="text" required="required" class="form-control" id="fname" name="fname" value="{{employee.firstName}}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-3 col-form-label">Last name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="lname" name="lname" value="{{employee.lastName}}">
                        </div>
                    </div>

                    <!-- alias -->
                    <div class="form-group row">
                        <label for="alias" class="col-sm-3 col-form-label">Alias</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="alias" name="alias" value="{{employee.alias}}">
                        </div>
                    </div>
                    <!-- email -->
                    <div class="form-group row">
                        <label for="email" class="col-sm-3 col-form-label">Email *</label>
                        <div class="col-sm-9">
                            <input type="email" required="required" class="form-control" id="email" name="email" value="{{employee.email}}">
                        </div>
                    </div>
                    <!-- Position -->
                    <div class="form-group row">
                        <label for="position" class="col-sm-3 col-form-label">Position *</label>
                        <div class="col-sm-9">
                            <input type="text" required="required" class="form-control" id="position" name="position" value="{{employee.position}}">
                        </div>
                    </div>
					<!-- Area -->
                    <div class="form-group row">
                        <label for="position" class="col-sm-3 col-form-label">Area *</label>
                        <div class="col-sm-9">
                            <input type="text" required="required" class="form-control" id="area" name="area" value="{{employee.area}}">
                        </div>
                    </div>
                    
                    <!-- Superpower -->
                    <div class="form-group row">
                        <label for="superpower" class="col-sm-3 col-form-label">Superpower</label>
                        <div class="col-sm-9">
                            <select name="superpower" id="superpower-selector" class="form-control">
                                <option value="">None</option>
                                {{#each superpowers}}
                                    <option value="{{superpowerID}}">{{superpower}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <!-- home -->
                    <div class="form-group row">
                        <label for="home" class="col-sm-3 col-form-label">Home</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="home" name="home" value="{{employee.home}}">
                        </div>
                    </div>
                    <!-- update button -->
                    <div class="form-group row justify-content-end">
                        <button id="update-employee" class="btn btn-secondary btn-lg" onclick="updateEmployee(event, {{employee.employeeID}})">Update</button>
                    </div>
                </form>
            </div>
            <!-- Teams-->
            <div class="col-md-5 mr-5">
                <h4 class="display-5">Team Affiliations</h4>
                <ul class="list-group list-group-flush">
                    {{#each teams_filtered}}
                        <li class="list-group-item"><a href="/teams/{{teamID}}">{{name}}</a></li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <script defer>
        selectSuperpower({{employee.superpower}});
        unableInputs();
    </script>
</html>