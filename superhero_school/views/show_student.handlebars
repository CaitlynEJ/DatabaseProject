<html>
    <!-- navbar -->
    <nav class="navbar navbar-expand-sm fixed-top navbar-light bg-light">
        <a class="navbar-brand" href="#">Superhero School</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="/index.html">Home</a>
            <a class="nav-link" href="/employees">Employees</a>
            <a class="nav-link" href="/students">Students</a>
            <a class="nav-link" href="/superpowers">Superpowers</a>
            <a class="nav-link" href="/missions">Missions</a>
            <a class="nav-link" href="/teams">Teams</a>
          </div>
        </div>
    </nav>
    <div class="container mt-5">
        <!-- student name -->
        <h3 class="display-3">{{student.firstName}} {{student.lastName}}</h3>
        <div class="row justify-content-between mt-4">
            <!-- student info update -->
            <div class="col-md-5">
                <form id="update-student-form">
                    <h6>* indicates required field</h6>
                    <!-- first & last name -->
                    <div class="form-group row">
                        <label for="fname" class="col-sm-3 col-form-label">First name *</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="fname" name="fname" value="{{student.firstName}}" required="required">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-3 col-form-label">Last name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="lname" name="lname" value="{{student.lastName}}">
                        </div>
                    </div>

                    <!-- alias -->
                    <div class="form-group row">
                        <label for="alias" class="col-sm-3 col-form-label">Alias</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="alias" name="alias" value="{{student.alias}}">
                        </div>
                    </div>
                    <!-- email -->
                    <div class="form-group row">
                        <label for="email" class="col-sm-3 col-form-label">Email *</label>
                        <div class="col-sm-9">
                            <input type="email" required="required" class="form-control" id="email" name="email" value="{{student.email}}">
                        </div>
                    </div>
                    <!-- GPA -->
                    <div class="form-group row">
                        <label for="gpa" class="col-sm-3 col-form-label">GPA *</label>
                        <div class="col-sm-9">
                            <input type="number" required="required" step="0.01" max="4.00" min="0.00" class="form-control" id="gpa" name="gpa" value="{{student.GPA}}">
                        </div>
                    </div>                  
                    <!-- Superpower -->
                    <div class="form-group row">
                        <label for="superpower" class="col-sm-3 col-form-label">Superpower</label>
                        <div class="col-sm-9">
                            <select name="superpower" id="superpower-selector" class="form-control">
                                <option value="">None</option>
                                {{#each superpowers}}
                                    <option value="{{superpowerID}}">{{superpower}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <!-- mentor -->
                    <div class="form-group row">
                        <label for="mentor" class="col-sm-3 col-form-label">Mentor</label>
                        <div class="col-sm-9">
                            <select name="mentor" id="mentor-selector" class="form-control">
                                <option value="">None</option>
                                {{#each employees}}
                                    <option value="{{employeeID}}">{{firstName}} {{lastName}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <!-- update button -->
                    <div class="form-group row justify-content-end">                        
                        <button id="update-student" class="btn btn-secondary btn-lg" onclick="updateStudent(event, {{student.studentID}})">Update</button>
                    </div>
                </form>
            </div>
            <!-- missions list -->
            <div class="col-md-5 mr-5">
                <h4 class="display-5">Missions</h4>
                <ul class="list-group list-group-flush">
                    {{#each missions_filtered}}
                        <li class="list-group-item"><a href="/missions/{{missionID}}">{{name}}</a></li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <script defer>
        selectSuperpower({{student.superpower}});
        selectMentor({{student.mentor}});
        unableInputs();
    </script>
</html>