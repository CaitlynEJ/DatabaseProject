<html>
    <!-- navbar -->
    <nav class="navbar navbar-expand-sm fixed-top navbar-light bg-light">
        <a class="navbar-brand" href="#">Superhero School</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="/index.html">Home</a>
            <a class="nav-link" href="/employees">Employees</a>
            <a class="nav-link" href="/students">Students</a>
            <a class="nav-link" href="/superpowers">Superpowers</a>
            <a class="nav-link" href="/missions">Missions</a>
            <a class="nav-link" href="/teams">Teams</a>
          </div>
        </div>
    </nav>
    <div class="container mt-5 pt-3">
        <!-- team name -->
        <h4 class="display-4">Team: {{team.name}}</h4>
        <div class="row justify-content-between mt-4">
            <!-- team info -->
            <div class="col-md-5">
                <table class="table">
                    <!-- Headquarters -->
                    <tr>
                        <th>Headquarters</th>
                        <td>{{team.headquartersLocation}}</td>
                    </tr>
                    <!-- Group Email -->
                    <tr>
                        <th>Group Email</th>
                        <td>{{team.groupEmail}}</td>
                    </tr>                
                </table>
            </div>
            <!-- team members w/ delete buttons-->
            <div class="col-md-5 mr-5">
                <h4 class="display-5">Team Members</h4>
                <ul class="list-group list-group-flush">
                    {{#each employees_filtered}}
                        <li class="list-group-item"><a href="/employees/{{employeeID}}">{{firstName}} {{lastName}}</a>
                            <button class="delete-buttons btn btn-secondary btn-sm" onclick="deleteTeamMember({{teamID}}, {{employeeID}})">&cross;</button>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</html>